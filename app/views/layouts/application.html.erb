<!DOCTYPE html>
<html>
  <head>
    <title>PantoForm</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link href="https://fonts.googleapis.com/css?family=Cabin|Source+Serif+Pro" rel="stylesheet">
  </head>

  <body>
    <header>
      <h1>Panto</br>Form</h1>
      <nav>
        <%= link_to 'Articles', articles_path%>
        <%= link_to 'Auteurs', authors_path%>
        <%= link_to 'Themes', themes_path%>

        <% if current_author %>
        <ul>
          <li><%= 'Bienvenue ' + current_author.full_name %></li>
          <li><%= link_to "Log out", logout_path, method: "delete" %></li>
        </ul>
      <% else %>
        <ul>
          <li><%= link_to "Login", 'signin' %></a></li>
          <li><%= link_to "Signup", 'signup' %></a></li>
        </ul>
      <% end %>
      </nav>
    </header>
    <div class="content">
      <%= yield %>
    </div>
  </body>
</html>
